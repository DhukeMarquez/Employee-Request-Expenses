        @Override
	public void actionPerformed(ActionEvent e)
	{
		if (e.getSource() == sub) {
			if (term.isSelected()) {
				String data1 = null;
				String data
					= " Name : "
					+ tname.getText() + "\n"
					+ " Employee ID : " 
					+ empidt.getText() + "\n" 
                                        + " Email : "
                                        + emailt.getText() + "\n"
                                        + "Request Date MM-DD-YYY : "
                                        + dates.getText() + "\n"
                                        + "Project Name : "
                                        + projnamet.getText() + "\n"
                                        + "Phase End Date MM-DD-YYY"
                                        + phasedates.getText() + "\n"
                                        + expenses.getText() + "\n"
                                        + "Amount : "
                                        + amounts.getText() + "\n"
                                        + "Any notes"
                                        + notess.getText() + "\n";
                                   if (phase1.isSelected())
                                       data1 = """
                                               What is the current phase of the project? : Initiation
                                               """;
                                   if (phase2.isSelected())
                                       data1 = """
                                               What is the current phase of the project? : Planing
                                               """;
                                   if (phase3.isSelected())
                                       data1 = """
                                               What is the current phase of the project? : Execution
                                               """;
                                   if (phase4.isSelected())
                                       data1 = """
                                               What is the current phase of the project? : Performance;Monitoring
                                               """;
                                   if (phase5.isSelected())
                                       data1 = """
                                               What is the current phase of the project? : Closure
                                               """;
				String data2 = "Reason for Request : " + projname.getText();
                            String data3 = null;
				tout.setText(data + data1 + data2 + data3);
				tout.setEditable(false);
				pol7.setText("Expense Requested Successfully..");
			}
			else {
				tout.setText("");
				pol8.setText("Please accept the"
							+ " terms & conditions..");
			}
		}

		else if (e.getSource() == reset) {
			String def = "";
			tname.setText(def);
			empidt.setText(def);
                        emailt.setText(def);
                        dates.setText(def);
			projnamet.setText(def);
                        expenses.setText(def);
                        amounts.setText(def);
                        notess.setText(def);
			pol.setText(def);
			tout.setText(def);
			term.setSelected(false);
			phasedates.setText(def);
		}
	}
}

